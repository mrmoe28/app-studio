# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Shotstack API
# For testing with watermarks (free tier)
SHOTSTACK_API_KEY=your_shotstack_sandbox_key_here
SHOTSTACK_API_ENV=sandbox

# For production with clean videos (paid tier)
# SHOTSTACK_API_KEY=your_shotstack_production_key_here
# SHOTSTACK_API_ENV=v1

# Use 'sandbox' for development/testing, 'v1' for production

# Vercel Blob Storage (for screenshot uploads)
# This is automatically set in Vercel deployments
# For local development, create a Blob store at vercel.com/storage
BLOB_READ_WRITE_TOKEN=your_blob_token_here

# ElevenLabs API (for text-to-speech voiceovers)
# Get your API key from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Playwright Configuration
PLAYWRIGHT_HEADLESS=true

# Database (Optional - for saving projects)
DATABASE_URL=your_neon_database_url_here

# Stripe API Keys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# STRIPE_WEBHOOK_SECRET=whsec_...  # Add this when you set up Stripe webhooks

# Optional: For future integrations
# NEXT_PUBLIC_MAX_VIDEO_DURATION=60
# NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Video Providers (Optional - for alternative video generation)
CREATOMATE_API_KEY=
VIDEO_PROVIDER=shotstack
# Options: shotstack | creatomate
VIDEO_ASPECT=9:16
# Options: 9:16 | 1:1 | 16:9
